        mc:Ignorable="d"
        Title="Diamond Star Racing Log In" Height="406.2" Width="963.935" Background="#FFF9E05A" Icon="evo_FUB_icon.ico" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Closed="Diamond_Star_Racing_Log_In_Closed">
    <StackPanel Margin="0,0,0,-1">
        <Image HorizontalAlignment="Left" Height="375.331" Margin="-3,0,0,0" VerticalAlignment="Top" Width="568" Source="evo.png" Stretch="UniformToFill"/>
