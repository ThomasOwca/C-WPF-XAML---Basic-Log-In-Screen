            </Label.RenderTransform>
        </Label>
        <Button x:Name="login" Content="Log In" Height="40" Margin="750,-250,41.46,0" Background="#FFE2E2DF" FontSize="20" FontFamily="Franklin Gothic Demi" Click="login_Click"/>

    </StackPanel>

</Window>

